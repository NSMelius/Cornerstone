<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="melius.nathan.employeedbapp.AddItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/firstNameEnttry"
        android:hint="First Name"
        android:elevation="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastNameEntry"
        android:layout_below="@+id/firstNameEnttry"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:hint="Last Name"
        android:elevation="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/lastNameEntry"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/phoneEntry"
        android:hint="Phone number"
        android:elevation="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/emailEntry"
        android:hint="Email"
        android:elevation="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/emailEntry"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/projectEntry"
        android:hint="Project"
        android:elevation="0dp" />

    <Button
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employerEntry"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:id="@+id/AddItem"
        android:onClick="addToDB" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/employerEntry"
        android:hint="Employer"
        android:elevation="0dp"
        android:layout_below="@+id/projectEntry"
        android:layout_alignParentStart="true" />
</RelativeLayout>
